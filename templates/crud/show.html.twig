{% include 'base/header.html.twig' %}
    <div class = "container">
     
             {% block body %}
                <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Homepage</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Show task {{task.id}} </li>
                </ol>
                </nav>

              
                <h2 class = "page-header">{{task.title}}</h2>
                <hr>
                <ul class = "list-group">
                    <li class = "list-group-item">Задание создано: {{task.created | date ("d.m.Y h:m:s")}}</li>
                    <li class = "list-group-item">Дата дедлайна: {{task.deadline | date ("d.m.Y h:m:s")}}</li>
                    <li class = "list-group-item">Категория: {{task.category}}</li>
                    <li class = "list-group-item">Содержание: {{task.content}}</li>
                    <li class = "list-group-item">Дополнительная информация: {{task.additional}}</li>
                    <li class = "list-group-item"> Осталось времени: 
                     {% set difference = date(task.deadline).diff(date(task.created)) %}
                     {% set leftDays = difference.days %}
                    
                     {% if leftDays == 1 %}
                        {{difference | date ('%d день %H:%I:%S')}}
                     {% else %}
                        {{difference | date ('%d дней %H:%I:%S')}}
                     {% endif %}
                    </li>
                </ul>
                <br>
                <a href = "/edit/{{task.id}}"><button class = "btn btn-light"> Перейти к редактированию задания</button></a>
               
             {% endblock %}
             
     
   
        {% include 'base/footer.html.twig' %}
    </div>
